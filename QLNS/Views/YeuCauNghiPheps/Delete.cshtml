@model QLNS.Models.YeuCauNghiPhep

@{
    ViewData["Title"] = "Xóa Yêu Cầu Nghỉ Phép";
}

<div class="container mt-4">
    <h2 class="text-center text-danger">
        <i class="fa-solid fa-trash"></i> Xóa Yêu Cầu Nghỉ Phép
    </h2>
    <hr />

    <div class="alert alert-warning text-center">
        <h5><i class="fa-solid fa-exclamation-triangle"></i> Bạn có chắc chắn muốn xóa yêu cầu này không?</h5>
        <p class="mb-0 text-danger">Hành động này không thể hoàn tác!</p>
    </div>

    <!-- Thẻ hiển thị chi tiết yêu cầu -->
    <div class="card shadow-lg border-danger">
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th class="bg-light text-primary">Nhân Viên</th>
                        <td>@Html.DisplayFor(model => model.NhanVien.HoTenNV)</td>
                    </tr>
                    <tr>
                        <th class="bg-light text-primary">Ngày Bắt Đầu</th>
                        <td>@Html.DisplayFor(model => model.NgayBatDau)</td>
                    </tr>
                    <tr>
                        <th class="bg-light text-primary">Ngày Kết Thúc</th>
                        <td>@Html.DisplayFor(model => model.NgayKetThuc)</td>
                    </tr>
                    <tr>
                        <th class="bg-light text-primary">Tổng Số Ngày</th>
                        <td>@Html.DisplayFor(model => model.TongSoNgay)</td>
                    </tr>
                    <tr>
                        <th class="bg-light text-primary">Lý Do</th>
                        <td>@Html.DisplayFor(model => model.LyDo)</td>
                    </tr>
                    <tr>
                        <th class="bg-light text-primary">Tình Trạng</th>
                        <td>
                            @if (Model.TinhTrang == "Đã Duyệt")
                            {
                                <span class="badge bg-success">✔ Đã Duyệt</span>
                            }
                            else if (Model.TinhTrang == "Từ Chối")
                            {
                                <span class="badge bg-danger">❌ Từ Chối</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">⏳ Chờ Xét Duyệt</span>
                            }
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Nút xác nhận xóa -->
    <div class="mt-4 d-flex justify-content-center">
        <form asp-action="Delete">
            <input type="hidden" asp-for="MaNghiPhep" />
            <button type="submit" class="btn btn-danger me-2">
                <i class="fa-solid fa-trash"></i> Xóa
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fa-solid fa-arrow-left"></i> Hủy
            </a>
        </form>
    </div>
</div>
