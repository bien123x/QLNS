@model QLNS.Models.NhanVien

@{
    ViewData["Title"] = "Chi tiết nhân viên";
}

<div class="container mt-4">
    <h2 class="text-center text-primary">
        <i class="fa-solid fa-user"></i> Chi tiết nhân viên
    </h2>
    <hr />

    <div class="card shadow-lg">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4 text-primary fw-bold">Họ và tên:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.HoTenNV)</dd>

                        <dt class="col-sm-4 text-primary fw-bold">Ngày sinh:</dt>
                        <dd class="col-sm-8">@Model.NgaySinh.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4 text-primary fw-bold">Giới tính:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.GioiTinh)</dd>

                        <dt class="col-sm-4 text-primary fw-bold">Địa chỉ:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.DiaChi)</dd>

                        <dt class="col-sm-4 text-primary fw-bold">Số điện thoại:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.SoDT)</dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4 text-primary fw-bold">Ngày vào làm:</dt>
                        <dd class="col-sm-8">@Model.NgayVaoLam.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4 text-primary fw-bold">Email:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-sm-4 text-primary fw-bold">Phòng ban:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.PhongBan.TenPhongBan)</dd>

                        <dt class="col-sm-4 text-primary fw-bold">Vị trí công việc:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ViTriCongViec.TenViTri)</dd>
                    </dl>
                </div>
            </div>

            <div class="text-center mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.MaNhanVien" class="btn btn-warning">
                    <i class="fa-solid fa-edit"></i> Chỉnh sửa
                </a>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="fa-solid fa-arrow-left"></i> Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>
