@model IEnumerable<QLNS.Models.ViTriCongViec>

@{
    ViewData["Title"] = "Danh sách vị trí công việc";
}

<div class="container mt-4">
    <h2 class="text-center text-primary mb-4">
        <i class="fa-solid fa-briefcase"></i> Danh sách Vị trí Công việc
    </h2>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="fa-solid fa-plus"></i> Thêm vị trí mới
        </a>
    </div>

    <table class="table table-hover table-bordered shadow-sm">
        <thead class="table-dark text-center">
            <tr>
                <th>Tên vị trí</th>
                <th>Hệ số lương</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.TenViTri)</td>
                    <td>@Html.DisplayFor(modelItem => item.HeSoLuong)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.MaViTri" class="btn btn-warning btn-sm">
                            <i class="fa-solid fa-pen-to-square"></i> Sửa
                        </a>
                        <a asp-action="Details" asp-route-id="@item.MaViTri" class="btn btn-info btn-sm">
                            <i class="fa-solid fa-circle-info"></i> Chi tiết
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.MaViTri" class="btn btn-danger btn-sm">
                            <i class="fa-solid fa-trash"></i> Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

