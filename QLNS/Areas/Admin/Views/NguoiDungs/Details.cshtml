@model QLNS.Models.NguoiDung

@{
    ViewData["Title"] = "Chi Tiết Người Dùng";
}

<div class="container mt-4">
    <h2 class="text-center text-primary">
        <i class="fa-solid fa-user"></i> Thông Tin Người Dùng
    </h2>
    <hr />

    <div class="card shadow-lg">
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th class="bg-light text-primary">Tên Đăng Nhập</th>
                        <td>@Html.DisplayFor(model => model.TenDangNhap)</td>
                    </tr>
                    <tr>
                        <th class="bg-light text-primary">Mật Khẩu</th>
                        <td>
                            <span class="text-danger fw-bold">••••••••••</span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-center">
        <a asp-action="Edit" asp-route-id="@Model?.MaNguoiDung" class="btn btn-warning me-2">
            <i class="fa-solid fa-edit"></i> Chỉnh Sửa
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left"></i> Quay Lại
        </a>
    </div>
</div>
