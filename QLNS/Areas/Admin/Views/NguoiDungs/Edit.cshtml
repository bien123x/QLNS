@model QLNS.Models.NguoiDung

@{
    ViewData["Title"] = "Chỉnh sửa Người Dùng";
}

<div class="container mt-4">
    <h2 class="text-center text-primary">
        <i class="fa-solid fa-user-edit"></i> Chỉnh sửa Người Dùng
    </h2>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6 p-4 shadow-lg rounded bg-white">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="MaNguoiDung" />

                <!-- Tên Đăng Nhập -->
                <div class="mb-3">
                    <label asp-for="TenDangNhap" class="form-label">
                        <i class="fa-solid fa-user"></i> Tên Đăng Nhập
                    </label>
                    <input asp-for="TenDangNhap" class="form-control" />
                    <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                </div>

                <!-- Mật Khẩu (Ẩn giá trị nhập vào) -->
                <div class="mb-3">
                    <label asp-for="MatKhau" class="form-label">
                        <i class="fa-solid fa-lock"></i> Mật Khẩu
                    </label>
                    <input asp-for="MatKhau" class="form-control" />
                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                </div>

                <!-- Nút Lưu và Hủy -->
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">
                        <i class="fa-solid fa-check"></i> Lưu
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fa-solid fa-arrow-left"></i> Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
