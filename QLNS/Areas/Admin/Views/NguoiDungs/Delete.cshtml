@model QLNS.Models.NguoiDung

@{
    ViewData["Title"] = "Xóa Người Dùng";
}

<div class="container mt-4">
    <h2 class="text-center text-danger">
        <i class="fa-solid fa-trash"></i> Xóa Người Dùng
    </h2>
    <hr />

    <div class="alert alert-warning text-center">
        <h5><i class="fa-solid fa-exclamation-triangle"></i> Bạn có chắc chắn muốn xóa người dùng này không?</h5>
        <p class="text-muted">Hành động này không thể hoàn tác!</p>
    </div>

    <div class="card shadow-lg">
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th class="bg-light text-primary">Tên Đăng Nhập</th>
                        <td>@Html.DisplayFor(model => model.TenDangNhap)</td>
                    </tr>
                    <tr>
                        <th class="bg-light text-primary">Mật Khẩu</th>
                        <td>
                            <span class="text-danger fw-bold">••••••••••</span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <form asp-action="Delete" class="mt-4 text-center">
        <input type="hidden" asp-for="MaNguoiDung" />

        <button type="submit" class="btn btn-danger">
            <i class="fa-solid fa-trash"></i> Xóa Người Dùng
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="fa-solid fa-arrow-left"></i> Quay Lại
        </a>
    </form>
</div>
