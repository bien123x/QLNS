@model IEnumerable<QLNS.Models.NguoiDung>

@{
    ViewData["Title"] = "Danh sách người dùng";
}

<div class="container mt-4">
    <h2 class="text-center text-primary mb-4">
        <i class="fa-solid fa-users"></i> Danh sách Người Dùng
    </h2>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="fa-solid fa-user-plus"></i> Thêm người dùng
        </a>
    </div>

    <table class="table table-hover table-bordered shadow-sm">
        <thead class="table-dark text-center">
            <tr>
                <th>Họ và tên</th>
                <th>Tên đăng nhập</th>
                <th>Mật khẩu</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var item in Model)
            {
                <tr>
                    @if (@item.NhanVien != null){
                        <td>@item.NhanVien.HoTenNV</td>
                    }
                    else {
                        <td style="color: red">Tài khoản này chưa có nhân viên</td>
                    }
                    <td>@Html.DisplayFor(modelItem => item.TenDangNhap)</td>
                    <td>@item.MatKhau</td> <!-- Ẩn mật khẩu -->
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.MaNguoiDung" class="btn btn-warning btn-sm">
                            <i class="fa-solid fa-pen-to-square"></i> Sửa
                        </a>
                        <a asp-action="Details" asp-route-id="@item.MaNguoiDung" class="btn btn-info btn-sm">
                            <i class="fa-solid fa-circle-info"></i> Chi tiết
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.MaNguoiDung" class="btn btn-danger btn-sm">
                            <i class="fa-solid fa-trash"></i> Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

